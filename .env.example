# ==================== DATABASE ====================
DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_banco

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0

# ==================== FASTAPI ====================
SECRET_KEY=sua-chave-secreta-aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ==================== WHATSAPP ====================
# Provedor: "evolution" ou "official"
WHATSAPP_PROVIDER=evolution

# Evolution API (se usar evolution)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua_api_key
EVOLUTION_DEFAULT_INSTANCE=NomeDaInstancia

# WhatsApp Business API Oficial (se usar official)
WHATSAPP_ACCESS_TOKEN=seu_access_token
WHATSAPP_PHONE_ID=seu_phone_id
WHATSAPP_BUSINESS_ACCOUNT_ID=seu_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=seu_token_verificacao
WHATSAPP_API_VERSION=v21.0

# Cliente padrão
DEFAULT_CLIENTE_ID=1

# ==================== ANTHROPIC (IA) ====================
ANTHROPIC_API_KEY=sk-ant-api...
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ==================== OPENAI (Áudio) ====================
OPENAI_API_KEY=sk-proj-...
WHISPER_MODEL=whisper-1
TTS_MODEL=tts-1
TTS_VOICE=nova
TTS_SPEED=0.9

# Habilitar áudio
ENABLE_AUDIO_INPUT=true
ENABLE_AUDIO_OUTPUT=true
AUDIO_OUTPUT_MODE=hybrid

# ==================== EMAIL (SMTP) ====================
SMTP_HOST=smtp.seuservidor.com
SMTP_PORT=465
SMTP_USER=seu_email@dominio.com
SMTP_PASSWORD=sua_senha
SMTP_FROM=Nome <seu_email@dominio.com>
CONTACT_EMAIL=contato@dominio.com

# ==================== AMBIENTE ====================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
LOG_FILE=logs/sistema.log
